<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/transparent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bank_background"
        android:src="@mipmap/bg_bank"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16dp"
        android:text="Bank Masr"
        android:id="@+id/bankName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bankAccountNumber"
        android:textSize="16sp"
        android:layout_below="@+id/bankName"
        android:layout_marginStart="16sp"
        android:text="000 000 000 000"
        android:textColor="@android:color/darker_gray"/>
    <ImageView
        android:id="@+id/bankLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/bank_logo"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>